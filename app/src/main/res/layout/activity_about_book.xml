<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutBookActivity"
    android:background="@drawable/backgroud">

    <androidx.cardview.widget.CardView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardBackgroundColor="@color/blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About This Book"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/judul"
        android:padding="16dp"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardElevation="8dp"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/FotoSendiri"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/fotocia" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/Nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patricia Clara Shinta"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginStart="110dp"
            android:fontFamily="@font/poppinsbold"
            android:textSize="20sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/layout">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="30dp"
            app:cardElevation="8sp"
            app:cardCornerRadius="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas :"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XI PPLG 2"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginStart="95dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="30dp"
            app:cardElevation="8sp"
            app:cardCornerRadius="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absen :"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginStart="100dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="30dp"
            app:cardElevation="8sp"
            app:cardCornerRadius="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dibuat Pada:"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 Oktober 2024"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginStart="155dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="30dp"
            app:cardElevation="8sp"
            app:cardCornerRadius="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versi :"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0.0"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginStart="90dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:tint="@color/black"
        android:backgroundTint="@color/blue" />

</RelativeLayout>